<%- include('./partials/head.ejs') %>

<% var first25Players = players.slice(0, 25); %>
<% var second25Players = players.slice(25, 50); %>

<div class="content-wrapper">

  <div class="home-team">

    <div class="team-data">
      <img class="flag" src="./media/dutch-flag.svg" alt="player info">
      <h1 class="team-name">Spacers</h1>
      <a class="team-info" href=""><img src="./media/info-b.svg" alt="player info"></a>
    </div>


    

  
      <div class="ply-data">
        
        <ul class="ply-nr">          
          <% first25Players.forEach(function(player) { %>
          <li class="<%= player.gender.toLowerCase() === 'male' || player.gender.toLowerCase() === 'm' ? 'male' : player.gender.toLowerCase() === 'female' || player.gender.toLowerCase() === 'f' ? 'female' : 'grey' %> gender-badge jersey-numbers"><%= player.jerseyNumber %></li>
          <% }) %>
        </ul>  
        

        
        <ul class="ply-name">
          <% first25Players.forEach(function(player) { %>
          <li class="player-name"><%= player.name %></li>
          <% }) %>
        </ul>

        
        <ul class="ply-stats">
          <% first25Players.forEach(function(player) { %>
          <li>
            <span class="block-badge random-number-blocks"></span>
            <span class="goals-badge random-number-goals"></span>
            <span class="turnovers-badge random-number-turnovers"></span>
            <span class="assists-badge random-number-assists"></span>
          </li>
          <% }) %>
        </ul>     
        
      </div>
    
  </div>

 <div class="score-box">

  <div class="live-total"><h1>15 - 3</h1></div>
  <div class="point-cat">
    <ul class="cat">
      <li><a href="">Points played</a></li>
      <li><a href="">Blocks</a></li>
      <li><a href="">Goals</a></li>
      <li><a href="">Turnovers</a></li>
      <li><a href="">Assists</a></li>
    </ul>

    <ul class="refrence">
        <li></li>
    </ul>

    <ul class="point">
      <li>3</li>
      <li>12</li>
      <li>6</li>
      <li>2</li>
      <li>13</li>
    </ul>
  </div>

 </div>

 <div class="game-leaders">

    <div class="live-total"><h1>Game leaders</h1></div>
    <div class="point-cat">
        <ul class="cat">
          <li><a href="">Most Blocks</a></li>
          <li><a href="">Most Goals</a></li>
          <li><a href="">Most Turnovers</a></li>
          <li><a href="">Most Assists</a></li>
          <li><a href="">Most Breaks</a></li>
        </ul>

        <ul class="refrence">
            <li>Kye Mooney</li>
            <li>Lorcan Salazar</li>
            <li>Kye Mooney</li>
            <li>Ezekiel Graham</li>
            <li>Spacers</li>
        </ul>
    
        <ul class="point">
          <li>3</li>
          <li>12</li>
          <li>6</li>
          <li>2</li>
          <li>13</li>
        </ul>
      </div>
  
   </div>

 <div class="out-team">

  <div class="team-data-o">
    <img class="flag-o" src="./media/brazil-flag.svg" alt="player info">
    <h1 class="team-name-o">Ignacio</h1>
    <a class="team-info-o" href=""><img src="./media/info-b.svg" alt="player info"></a>
  </div>

  <div class="ply-data">
        
    <ul class="ply-nr">          
      <% second25Players.forEach(function(player) { %>
      <li class="<%= player.gender.toLowerCase() === 'male' || player.gender.toLowerCase() === 'm' ? 'male' : player.gender.toLowerCase() === 'female' || player.gender.toLowerCase() === 'f' ? 'female' : 'grey' %> gender-badge jersey-numbers"><%= player.jerseyNumber %></li>
      <% }) %>
    </ul>  
    

    
    <ul class="ply-name">
      <% second25Players.forEach(function(player) { %>
      <li class="player-name"><%= player.name %></li>
      <% }) %>
    </ul>

    
    <ul class="ply-stats">
      <% second25Players.forEach(function(player) { %>
      <li>
        <span class="block-badge random-number-blocks"></span>
        <span class="goals-badge random-number-goals"></span>
        <span class="turnovers-badge random-number-turnovers"></span>
        <span class="assists-badge random-number-assists"></span>
      </li>
      <% }) %>
    </ul>     
    
  </div>

</div>


<%- include('./partials/foot.ejs') %>